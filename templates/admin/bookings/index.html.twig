
{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Bookings !{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-center">Gestion Des Bookings</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteurs</th>
                    <th>Annonces</th>
                    <th>Dur√©e</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{ booking.id }}</td>
                        <td>{{ booking.createdAt | date('d/m/Y H:i')}}</td>
                        <td>{{ booking.booker.firstName }} {{ booking.booker.lastName }}</td>
                        <td>{{ booking.ad.title }}</td>
                        <td>{{ booking.duration }}</td>
                        <td>{{ booking.amount }} &euro;</td>
                        <td>
                            <a href="{{path("admin_booking_edit",{'id':booking.id})}}" class="btn btn-primary">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                            <a href="{{path("admin_booking_delete",{'id':booking.id})}}"  class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}