{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annnonces !{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-center">Gestion Des Annonces</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteurs</th>
                    <th class='text-center'>Reservations</th>
                    <th class='text-center'>Note</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ad in ads %}
                    <tr>
                        <td>{{ ad.id }}</td>
                        <td>{{ ad.title}}</td>
                        <td>{{ ad.author.firstName }} {{ ad.author.lastName }}</td>
                        <td class='text-center'>
                            <span class="badge badge-primary rounded">{{ad.bookings | length}}</span>   
                        </td>
                        <td class='text-center'>
                            <span class="badge badge-primary rounded">{{ad.avgRating | number_format(1,',',' ')}}</span>
                        </td>
                        <td>
                            <a href="{{path('admin_ads_edit',{'id': ad.id })}}" class="btn btn-primary">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                            <a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
