
                {% set url = path('ads_show',{'slug':ad.slug}) %}

                <div class="col-md-4">
                    <div class="card bg-lenght mb-3">
                        <div class="card header text-center">
                            {{ ad.rooms}} chambres, <strong>{{ ad.price }}euro / nuit</strong> <br>
                            <small>Pas encore not√©</small>
                        </div>
                        <a href=" {{ url }} ">
                            <img src="{{ ad.coverImage }}" alt="Image de l'appartement" style="height:200; width:100%; display:block">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ url }}">{{ ad.title }}</a>
                                    
                            </h5>
                            <p class="card-text">
                                {{ ad.introduction }}
                            </p>
                            <a href="{{ url }}" class="btn btn-secondary">En savoir plus !</a>
                            {% if app.user and app.user == ad.author %}
                                <a href="{{path('ads_edit', {'slug':ad.slug })}}" class="btn btn-secondary mt-2">Modifier l'annonce</a>
                                <a href="{{path('ads_delete',{'slug':ad.slug })}}" class="btn btn-danger mt-2">Supprimer l'annonce</a>
                            {% endif %}
                        </div>
                    </div>
                </div>